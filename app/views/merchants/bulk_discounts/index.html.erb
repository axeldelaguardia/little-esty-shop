<%= link_to 'Back to Merchant Dashboard', merchant_dashboard_path(@merchant) %>

<h1>Bulk Discounts</h1>

<%= link_to 'Create Bulk Discount', new_merchant_bulk_discount_path(@merchant) %>

<section id='upcoming_holidays'>
	<h2>Upcoming Holidays</h2>
	<% @upcoming_holidays.each do |holiday| %>
		<p><%= holiday.name %> - <%= holiday.date %></p>
	<% end %>
</section>

<ul id='discounts'>
	<% @discounts.each do |discount| %>
		<li id="<%= discount.id %>"> 
			<%= link_to "Bulk Discount ##{discount.id}",  merchant_bulk_discount_path(@merchant, discount)%> - 
			<%= link_to 'Delete', merchant_bulk_discount_path(@merchant, discount), method: :delete %>
			</br>
			Percentage: <%= decimal_to_percent(discount.percentage) %>%</br>
			Quantity Threshold: <%= discount.quantity_threshold %></br>
		</li>
	<% end %>
</ul>