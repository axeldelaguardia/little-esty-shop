<h3><%= @merchant.name %></h3>
<h4>Invoice #<%= @invoice.id %></h4>
<p>Status: <%= @invoice.status %></p>
<p>Created on: <%= @invoice.created_at.strftime("%A, %B %d, %Y") %></p>
<div id="total_revenue">
  <p>Total Revenue: <%=number_to_currency(@invoice.total_revenue.to_f/100, percision: 2) %></p>
  <p>Total Revenue with Discounts: <%=number_to_currency(@invoice.total_revenue.to_f/100 - @invoice.total_discounts.to_f/100, percision: 2) %></p>
</div>

<div id="customers">
<h3>Customer:</h3>
<p><%= @invoice.customer.first_name %> <%= @invoice.customer.last_name %></p>
</div>

<h3>Items on this invoice:</h3>
<table>
  <tr>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Status</th>
  </tr>
  <tr>
    <%@invoice.invoice_items.each do |invoice_item|%>
		<div id=<%=invoice_item.id%>>
			<td><%=invoice_item.item.name%></td>
			<td><%=invoice_item.quantity%></td>
			<td><%=(number_to_currency(invoice_item.unit_price.to_f/100))%></td>
      <td>
        <%= form_with url: "/merchants/#{@merchant.id}/invoices/#{@invoice.id}", method: :patch, local: true do |form|%>
					<%= form.select :status, ['pending', 'packaged', 'shipped'], selected:invoice_item.status %>
					<%= form.hidden_field :invoice_item_id, value: invoice_item.id%>
					<%= form.submit "Update Item Status" %>
        <%end%>
      </td>
			<td>
				<% if invoice_item.bulk_discount_applies? %>
					<%= link_to 'Bulk Discount Applied', merchant_bulk_discount_path(@merchant, invoice_item.discount_applied) %>
				<% end %>
			</td>
		</div>
 		</tr>
    <% end %>
</table>